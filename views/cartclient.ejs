<% layout('layout') -%>
<div id="content" class="container">
   <div class="cart">
      <h3>Giỏ Hàng Của Bạn</h3>
      <div class="table-responsive">
         <table class="table table-hover table-bordered">
            <thead>
               <tr>
                  <th>#</th>
                  <th>Mã Sản Phẩm</th>
                  <th>Tên Sản Phẩm</th>
                  <th>Đơn Giá</th>
                  <th>Số Lượng</th>
                  <th>Thành Tiền</th>
               </tr>
            </thead>
            <tbody>
            <% for (var i=0;i<giohang.length;i++){%>
                <tr>
                  <td><%= i+1%></td>
                  <td><%=  giohang[i].masanpham %></td>
                  <td><%=  giohang[i].tensanpham %></td>
                  <td><%=  giohang[i].giasanpham %></td>
                  <td><input type="number" name="quantity"  min="1" max="5" value="<%=  giohang[i].soluongsanpham %>" disabled></td>
                  <td><%=  giohang[i].thanhtien %></td>
               </tr>
           <% } %>     
               <tr class="danger">
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
               </tr>
               <tr>
                  <td></td>
                  <td></td>
                  <td>Phụ Thu</td>
                  <td>Giảm giá</td>
                  <td>Tổng Tiền</td>
                  <td><a type="button" href="/dathang/checkout"  class="btn btn-inverse">Đặt Hàng</a></td>
               </tr>
            </tbody>
         </table>
      </div>
   </div>
</div>