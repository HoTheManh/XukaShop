<% layout('layout') -%>
<div id="content" class="container-fluid">
   <div class="banner col-md-12">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
         <!-- Indicators -->
         <ol class="carousel-indicators">
           <% for (var i=0;i<banner.length;i++){%>     
            <li data-target="#carousel-example-generic" data-slide-to="<%= i%>" class="active"></li>
            <% } %> 
         </ol>
         <!-- Wrapper for slides -->
         <div class="carousel-inner" role="listbox">                 
            <div class="item active">
               <a href="/sanpham/<%=chuyenKhongDau(banner[0].TenSanPham)%>/<%=banner[0].MaSanPham%>"><img src="<%=banner[0].HinhBanner%>" alt="..."></a>
            </div>
            <% for (var j=1;j<banner.length;j++){%>       
            <div class="item">
               <a href="/sanpham/<%=chuyenKhongDau(banner[j].TenSanPham)%>/<%=banner[j].MaSanPham%>"><img src="<%=banner[j].HinhBanner%>" alt="..."></a>
            </div>
            <%  } %>                  
         </div>
         <!-- Controls -->
         <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
         <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
         <span class="sr-only">Previous</span>
         </a>
         <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
         <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
         <span class="sr-only">Next</span>
         </a>
      </div>
   </div>
   <div class="col-md-12 product-new">
      <h4>Sản phẩm mới</h4>
      <% sanpham.forEach(function(item){%>
      <div class="col-md-3 col-xs-6">
         <div class="thumbnail">
            <% for (var i=0;i<hinh.length;i++){%>
            <% if(hinh[i].Mahang==item.MaSanPham){%>
            <a href="/sanpham/<%=chuyenKhongDau(item.TenSanPham)%>/<%=item.MaSanPham%>"> <img src="<%=hinh[i].FileHinh%>" class="img-responsive" alt="..."></a>
            <%break ;}%>
            <% } %>
            <div class="caption">
               <div id="name">
                  <a href="/sanpham/<%=chuyenKhongDau(item.TenSanPham)%>/<%=item.MaSanPham%>">
                     <h5><%=item.TenSanPham%></h5>
                  </a>
               </div>
               <a href="/sanpham/<%=chuyenKhongDau(item.TenSanPham)%>/<%=item.MaSanPham%>">
                  <p><%= parseFloat(item.GiaThuong).toFixed().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.") %> VNĐ</p>
               </a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
   <% if (sanphambanchay.length>0){%>
     <div class="col-md-12 product-new">
      <h4>Sản phẩm bán chạy</h4>
      <% sanphambanchay.forEach(function(sp){%>
      <div class="col-md-3 col-xs-6">
         <div class="thumbnail">
            <% for (var i=0;i<hinh.length;i++){%>
            <% if(hinh[i].Mahang==sp.MaSanPham){%>
            <a href="/sanpham/<%=chuyenKhongDau(sp.TenSanPham)%>/<%=sp.MaSanPham%>"> <img src="<%=hinh[i].FileHinh%>" class="img-responsive" alt="..."></a>
            <%break ;}%>
            <% } %>
            <div class="caption">
               <div id="name">
                  <a href="/sanpham/<%=chuyenKhongDau(sp.TenSanPham)%>/<%=sp.MaSanPham%>">
                     <h5><%=sp.TenSanPham%></h5>
                  </a>
               </div>
               <a href="/sanpham/<%=chuyenKhongDau(sp.TenSanPham)%>/<%=sp.MaSanPham%>">
         <% if (sp.KhuyenMai!="có"){%>
         <p><%= parseFloat(sp.GiaThuong).toFixed().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.") %> VNĐ</p>
         <%}else {%>
         <p><%= parseFloat(sp.GiaKhuyenMai).toFixed().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.") %> VNĐ</p>
         <p style="text-decoration:line-through;color:black;"><%=parseFloat(sp.GiaThuong).toFixed().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.")%> VNĐ</p>
         <%}%>

               </a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
  <% }%>
</div>
<%
   function chuyenKhongDau(alias) {
      var str = alias;
      str = str.toLowerCase();
      str = str.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g,"a"); 
      str = str.replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g,"e"); 
      str = str.replace(/ì|í|ị|ỉ|ĩ/g,"i"); 
      str = str.replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g,"o"); 
      str = str.replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g,"u"); 
      str = str.replace(/ỳ|ý|ỵ|ỷ|ỹ/g,"y"); 
      str = str.replace(/đ/g,"d");
      str = str.replace(/!|@|%|\^|\*|\(|\)|\+|\=|\<|\>|\?|\/|,|\.|\:|\;|\'|\"|\&|\#|\[|\]|~|\$|_|`| |{|}|\||\\/g,"-");
      str = str.replace(/ + /g," ");
      str = str.trim(); 
      return str;
   }
%>